/* BASICO */

html
	font-family 'Roboto', sans-serif
	font-weight 400
	background-color negro2
	
.sombra1
	textShadow(0px 1px 2px negro)
	
.texto-principal
	color alpha(principal,70%) !important
   
.texto-blanco
	color alpha(blanco,90%) !important
	
.texto-gris
	color alpha(gris,90%) !important
	
.texto-gris-2
	color alpha(gris,30%) !important
	
.texto-rosa
	color alpha(rosa,80%) !important
	
.texto-celeste
	color alpha(celeste2,80%) !important
	
.texto-violeta
	color alpha(violeta,80%) !important
	
.bg-principal
	background-color alpha(principal,80%) !important
	
.bg-azul
	background-color alpha(azul,80%) !important
	
.bg-rosa
	background-color rosa !important
	
.bg-blanco
	background-color blanco !important
	
.bg-negro
	background-color negro !important
	
.bg-segundario
	background-color #0d0b0d !important
	margin 0
	
.bg-terceario
	background-color lighten(negro,90%) !important
	margin 0
	
.bg-rojo
	background-color alpha(rojo,80%)
	
.bg-gris-oscuro
	background-color lighten(negro,5%)
	
.btnFull
	width 100%

.intrusivo
	width 100%
	height 100%
	background-color alpha(negro,90%)
	z-index 1100
	position fixed
	top 0px
	opacity 1
	tra(1s)
	
.textoIntrusivo 
	width 60%
	margin 0 auto
	padding-top 200px
	
	& p 
		font-size 30px
		color blanco
		text-align center
		margin 0
		
	& span 
		color principal
	
	& .btn-intrusivo
		margin 50px auto 0
		width 180px
	
#btnIntrusivo
	transition  .4s opacity ease-out, .4s left ease-out
	position absolute
	top 20px
	right 20px
	opacity  1
	
	& i 
		color negro
		font-size 30px

.no-js #loader
	display none
.js #loader
	display block
	position absolute
	left 100px
	top: 0

.se-pre-con
	position fixed
	left 0px
	top 0px
	width: 100%
	height: 100%
	z-index 9999
	background-color rgba(21,21,21,1.00)
	display flex
	justify-content center
	align-items center
	
/* BASICO FINAL */