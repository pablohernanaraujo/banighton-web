/* INICIO */

.fullScreenTexto
  width 100%
  height 240px
  color white
  font-size 50px
  text-shadow 0px 0px 8px rgba(0,0,0,0.3)
  position absolute
  top 50%
  margin-top -100px
  z-index 5

  & div
    margin-left 15%

.primerPlano
  background-size cover
  position absolute
  bottom 0

.inicioSegunda
  padding-top 100px
  padding-bottom 100px
  position relative
  background-color negro2

.inicioCuarta
  padding-top 100px
  padding-bottom 70px
  overflow hidden
  background-color negro2

.circulos
  bordesCirculares(50%)
  background-color principal
  width 80px
  height 80px
  boxShadow(-10px 10px 15px alpha(negro,60%))
  text-align center
  line-height 80px
  font-size 30px
  margin-bottom 25px

.pasosTextos
  color blanco

  & span
    font-size 30px
    font-weight 300

  & p
    font-size 20px
    font-weight 200

.parallaxContenido
  color blanco
  text-shadow 0 0 6px rgba(0,0,0,0.5)
  display flex
  flex-direction column
  justify-content center
  height 100%

  & h3
    margin 0

  & p
    margin 0
    font-size 20px
    padding-bottom 15px

.parallaxSocials
  display flex
  flex-direction row-reverse
  padding-top 15px

  & a
    margin-left 15px

.inicioVideo
  position absolute
  width 100%
  height 100%
  display flex
  justify-content space-around
  align-items center
  top 0

.videoTexto
  color blanco

  & h3
    margin 0

  & p
    margin 0
    font-size 20px
    padding-bottom 15px

.promo
  padding 0 10px
  color blanco
  text-shadow 0 0 6px rgba(0,0,0,0.7)
  opacity 0
  position relative
  transition all .5s ease-in-out

  & i
    font-size 110px
    margin-bottom 30px

  & span
    font-size 30px
    display block
    font-weight 300

  & p
    font-size 20px
    font-weight 200

#paso1
  transform translate(0px, 0px)

#paso2
  transform translate(0px, 0px)

#paso3
  transform translate(0px, 0px)
	
